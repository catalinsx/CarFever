@model FinalProject.Models.Car

@{
    ViewData["Title"] = "Car Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<style>
    body {
        background-image: url("/Images/background.jpeg");
        background-repeat: no-repeat;
        background-size: cover;
    }
    .car-image {
        height: 200px;
        object-fit: cover;
    }
</style>

<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">@Model.Name</h3>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center" style="height: 200px; overflow: hidden;">
                        <img src="@Model.ImageUrl" class="img-fluid img-thumbnail car-image" alt="@Model.Name">
                    </div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Description</h4>
                    <p>@Model.LongDescription</p>
                    <h4 class="mt-5">Price: @Model.Price.ToString("#,0€")</h4>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">General Info</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                                <tr>
                                    <td>Brand</td>
                                    <td>@Model.Brand</td>
                                </tr>
                                <tr>
                                    <td>Model</td>
                                    <td>@Model.Model</td>
                                </tr>
                                <tr>
                                    <td>Engine Capacity</td>
                                    <td>@Model.engineCapacity cm<sup>3</sup></td>
                                </tr>
                                <tr>
                                    <td>Production year</td>
                                    <td>@Model.yearProduction</td>
                                </tr>
                                <tr>
                                    <td>Horse Power</td>
                                    <td>@Model.horsePower</td>
                                </tr>
                                <tr>
                                    <td>Newton Meters</td>
                                    <td>@Model.newtonMetters</td>
                                </tr>
                                <tr>
                                    <td>Fuel Type</td>
                                    <td>@Model.fuelType</td>
                                </tr>
                                <tr>
                                    <td>Gearbox</td>
                                    <td>@Model.gearBox</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
